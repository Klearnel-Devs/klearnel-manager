ManagerScreen:
    name: 'Scanner'
    fullscreen: True

    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            size_hint_y: None
            size: (root.width, root.height/20)
            ActionView:
                id: av
                ActionPrevious:
                    text: "Logout"
                    on_press:
                        app.logout()

                ActionSpinner:
                    id: spnr
                    important: True
                    text: 'Jump to Screen'
                    values: app.screen_names
                    on_text:
                        app.go_screen(args[1])
                ActionToggleButton:


                ActionButton:
                    text: 'Previous screen'
                    on_press:
                        app.go_screen('Settings')

                ActionButton:
                    text: 'Next screen'
                    on_press:
                        app.go_screen('Quarantine')

        ScannerViewModal:
            size_hint_y: None
            size: (root.width, (root.height - (root.height/20) - (root.height/20) - 20 ))
            id: svm
            orientation: 'vertical'

            ListView:
                id: lv2
        BoxLayout:
            size_hint_y: None
            size: (root.width, root.height/20)
            orientation: 'horizontal'
            Button:
                text: 'Add'
            Button:
                text: 'Modify'
            Button:
                text: 'Delete'
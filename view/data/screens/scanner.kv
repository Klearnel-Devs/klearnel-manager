ManagerScreen:
    name: 'Scanner'
    fullscreen: True

    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            size_hint_y: None
            size: (root.width, root.height/20)
            ActionView:
                id: av
                ActionPrevious:
                    text: "Quit"
                    on_press:
                        app.quit()

                ActionSpinner:
                    id: spnr
                    important: True
                    text: 'Scanner'
                    values: app.screen_names
                    on_text:
                        app.go_screen(args[1])
                ActionToggleButton:


                ActionButton:
                    text: 'Previous screen'
                    on_press:
                        app.go_screen('Settings')

                ActionButton:
                    text: 'Next screen'
                    on_press:
                        app.go_screen('Quarantine')
        ScannerViewModal:
            id: svm
            orientation: 'vertical'
            ListView:
                id: lv2
                size_hint_y: None
                size: (1.0, 1.0)

        Button:
            text: 'Add Scanner Item'
            size_hint_y: None
            size: (root.width, root.height/20)
            on_press:
                app.get_index('addscan')
                app.load_screen(app.index)
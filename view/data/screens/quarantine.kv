ManagerScreen:
    name: 'Quarantine'
    fullscreen: True
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                id: av
                ActionPrevious:
                ActionSpinner:
                    id: spnr
                    important: True
                    text: 'Jump to Screen'
                    values: app.screen_names
                    on_text:
                        app.go_screen(args[1])
                ActionToggleButton:
                ActionButton:
                    text: 'Previous screen'
                    on_press:
                        app.go_screen('Scanner')

                ActionButton:
                    text: 'Next screen'
                    on_press:
                        app.go_screen('Settings')
        Label:
            text: "Quarantine"
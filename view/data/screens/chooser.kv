#:import lv kivy.uix.listview
#:import la kivy.adapters.listadapter

ManagerScreen:
    name: 'Chooser'
    fullscreen: True

    BoxLayout:
        orientation: 'vertical'
        Image:
            size_hint_y: None
            height: root.height/5
            source: '../view/data/resources/klearnel.png'

        ListViewModal:
            id: lvm
            orientation: 'vertical'
            ListView:
                id: lv
                size_hint_y: None
                size: (1.0, 1.0)

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 40
            Button:
                size_hint_x: None
                width: root.width/4
                text: 'Add New Client'
                on_press:
                    app.get_index('AddServ')
                    app.load_screen(app.index)
            Button:
                size_hint_x: None
                width: root.width/4
                text: 'Quit'
                on_press:
                    app.quit()
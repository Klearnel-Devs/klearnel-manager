#:import lv kivy.uix.listview
#:import la kivy.adapters.listadapter

ManagerScreen:
    name: 'Chooser'
    fullscreen: True

    BoxLayout:
        orientation: 'vertical'
        Image:
            source: '../view/data/resources/klearnel.png'
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

            ListViewModal:
                id: lvm
                orientation: 'vertical'
                ListView:
                    id: lv


        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            padding: root.width/8

            GridLayout:
                cols: 2
                rows: 1
                row_default_height: 30
                Button:
                    size_hint_x: None
                    width: root.width/4
                    text: 'Add New Client'
                    on_press:
                        app.get_index('AddServ')
                        app.load_screen(app.index)
                Button:
                    size_hint_x: None
                    width: root.width/4
                    text: 'Quit'
                    on_press:
                        app.quit()
        Label:
            text: "Developed by Klearnel Devs"
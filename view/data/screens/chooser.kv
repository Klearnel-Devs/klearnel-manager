ManagerScreen:
    name: 'Chooser'
    fullscreen: True

    BoxLayout:
        orientation: 'vertical'
        Image:
            source: '../view/data/resources/kernel1.png'
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            padding: root.width/5

            Label:
                text: "Placeholder"


        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            padding: root.width/10

            GridLayout:
                cols: 3
                rows: 1
                row_default_height: 30
                Button:
                    size_hint_x: None
                    width: root.width/4
                    text: 'Connect'
                    on_press:
                        app.connect()
                Button:
                    size_hint_x: None
                    width: root.width/4
                    text: 'Add New Server'
                    on_press:
                        app.get_index('AddServ')
                        app.load_screen(app.index)
                Button:
                    size_hint_x: None
                    width: root.width/4
                    text: 'Quit'
                    on_press:
                        app.quit()
        Label:
            text: "Developed by Klearnel Devs"